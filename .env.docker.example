# Environment variables for Docker deployment
# Copy this file to .env.docker and fill in your values

# PostgreSQL Configuration
POSTGRES_USER=poneglyph
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=poneglyph
POSTGRES_PORT=5432

# Database URL (automatically constructed in docker-compose.yml)
# If you use an external database, uncomment and set this:
# DATABASE_URL=postgresql://user:password@host:port/dbname?schema=public

# NextAuth Configuration
# For production: https://poneglyph.ca
NEXTAUTH_URL=http://localhost:3000
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# Encryption Key for Gemini API keys (32 bytes / 64 hex chars)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=generate_with_openssl_rand_hex_32

# Application Port
APP_PORT=3000

# Optional: Disable user registration
# ALLOW_REGISTRATION=true

# Optional: Google API Key
# GOOGLE_API_KEY=your_google_api_key_here
